@model IEnumerable<EKM_Project.Models.Cake>
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="AdminPage">
    <div class="navBar">
        <h2 class="logoText">Administration</h2>
        <button class="btn btn-default returnBtn">@Html.ActionLink("Return to Front-end", "Index", "Home")</button>
    </div>

    <div class="sideBarCont">
        <div class="sidebar">
            <ul class="nav nav-pills nav-stacked">
                <li role="presentation" >@Html.ActionLink("Add a Cake", "Index")</li>
                <li role="presentation" class="active">@Html.ActionLink("Edit a Cake", "Edit")</li>
            </ul>
        </div>
        <div class="content">
            <table id="your_cakes" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.CakeName)</th>
                        <th>@Html.DisplayNameFor(model => model.CakeDescription)</th>
                        <th>@Html.DisplayNameFor(model => model.Price)</th>

                        <th>Modify</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.CakeName)</td>
                            <td>@Html.DisplayFor(modelItem => item.CakeDescription)</td>
                            <td>£@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>
                                <button class="btn btn-default">@Html.ActionLink("Edit", "EditCake", new { id = item.Id })</button>
                                <button class="btn btn-default">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

